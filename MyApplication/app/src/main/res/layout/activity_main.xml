<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/timer"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:background="#FFEB3B"
        android:gravity="center"
        android:text="30"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/score"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:background="#FFEB3B"
        android:gravity="center"
        android:text="0/0"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087" />

    <TextView
        android:id="@+id/equation"
        android:layout_width="276dp"
        android:layout_height="71dp"
        android:gravity="center"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.201" />

    <TextView
        android:id="@+id/square1"
        android:layout_width="168dp"
        android:layout_height="166dp"
        android:background="#FFEB3B"
        android:gravity="center"
        android:text="TextView"
        android:clickable="true"
        android:onClick="squareClicked"
        android:textStyle="bold"
        android:tag="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426" />

    <TextView
        android:id="@+id/square2"
        android:layout_width="168dp"
        android:layout_height="166dp"
        android:background="#00BCD4"
        android:clickable="true"
        android:gravity="center"
        android:text="TextView"
        android:onClick="squareClicked"
        android:textStyle="bold"
        android:tag="5"
        app:layout_constraintBottom_toBottomOf="@+id/square1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/square3"
        android:layout_width="168dp"
        android:layout_height="166dp"
        android:background="#FF9800"
        android:clickable="true"
        android:gravity="center"
        android:text="TextView"
        android:onClick="squareClicked"
        android:textStyle="bold"
        android:tag="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/square1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/square4"
        android:layout_width="168dp"
        android:layout_height="166dp"
        android:background="#E91E63"
        android:clickable="true"
        android:onClick="squareClicked"
        android:gravity="center"
        android:text="TextView"
        android:textStyle="bold"
        android:tag="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/square3"
        app:layout_constraintTop_toBottomOf="@+id/square2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/StartButton"
        android:layout_width="255dp"
        android:layout_height="245dp"
        android:text="GO!"
        android:textSize="70sp"
        android:gravity="center"
        android:onClick="squareClicked"
        android:clickable="true"
        android:textStyle="bold|italic"
        android:tag="start"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.584" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="226dp"
        android:layout_height="68dp"
        android:text="TextView"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#9A9A9A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/square4" />

</androidx.constraintlayout.widget.ConstraintLayout>